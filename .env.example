# ===============================================
# Claude API Configuration
# ===============================================
ANTHROPIC_API_KEY=your_api_key_here

# ===============================================
# Agent Configuration
# ===============================================
AGENT_NAME=MyDigitalAssistant
AGENT_MODEL=claude-sonnet-4-5

# ===============================================
# MCP (Model Context Protocol)
# ===============================================
ENABLE_MCP=true

# ===============================================
# Database
# ===============================================
DB_PATH=./data/agent-memory.db

# ===============================================
# Email Configuration (Optional)
# ===============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ===============================================
# Task Scheduling
# ===============================================
ENABLE_SCHEDULER=true
SCHEDULER_TIMEZONE=Africa/Cairo

# ===============================================
# Logging
# ===============================================
LOG_LEVEL=info
LOG_FILE=./logs/agent.log

# ===============================================
# MCP SERVER PORTS
# ===============================================
GOOGLE_WORKSPACE_MCP_PORT=3001
NOTION_MCP_PORT=3002
AIRTABLE_MCP_PORT=3003
TELEGRAM_MCP_PORT=3004
WHATSAPP_MCP_PORT=3005
TWITTER_MCP_PORT=3006
REDDIT_MCP_PORT=3007
FILESYSTEM_MCP_PORT=3008

# ===============================================
# GOOGLE WORKSPACE CONFIGURATION
# ===============================================
# Get credentials from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/oauth2callback
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# ===============================================
# NOTION CONFIGURATION
# ===============================================
# Get API key from: https://www.notion.so/my-integrations
NOTION_API_KEY=your_notion_api_key

# ===============================================
# AIRTABLE CONFIGURATION
# ===============================================
# Get API key from: https://airtable.com/account
AIRTABLE_API_KEY=your_airtable_api_key
AIRTABLE_BASE_ID=your_airtable_base_id

# ===============================================
# TELEGRAM BOT CONFIGURATION
# ===============================================
# Get token from: https://t.me/BotFather
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ===============================================
# WHATSAPP BUSINESS API CONFIGURATION
# ===============================================
# Get credentials from: https://developers.facebook.com/
WHATSAPP_PHONE_NUMBER_ID=your_whatsapp_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token

# ===============================================
# TWITTER/X API CONFIGURATION
# ===============================================
# Get credentials from: https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret

# ===============================================
# REDDIT API CONFIGURATION
# ===============================================
# Get credentials from: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=MCP-Reddit-Bot/1.0

# ===============================================
# FILESYSTEM MCP CONFIGURATION
# ===============================================
# Base path for filesystem operations (for security)
FILESYSTEM_BASE_PATH=./workspace
